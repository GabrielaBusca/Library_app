<script>
  $(document).ready(function(){
  	$(":file").filestyle({
	  input: false
	})
  })
</script>
<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
	<table class="table">
		<tr>
			<th> Titlu </th>
			<td> <%= f.input :titlu , :input_html => {:class => 'form-control'},:label => false %> </td>
		</tr>
		<tr>
			<th> Cod isbn </th>
			<td> <%= f.input :cod_isbn , :input_html => {:class => 'form-control'}, :label => false %> </td>
		</tr>

		<tr>
			<th> Dată apariție </th>
			<td> <%= f.input :data_aparitie, :label => false, :start_year => 1910, :end_year => 2015 %> </td>
		</tr>
		<tr>
			<th> Dată adăugare </th>
			<td> <%= f.input :data_adaugare, :label => false, :start_year => 1910, :end_year => 2015 %> </td>
		</tr>
		<tr>
			<th> Autor </th>
			<td> <%= f.input :id_autor, :label => false, :input_html => {:class => 'form-control'}, collection: @authors, label_method: :nume, value_method: :id %> </td>
		</tr>
		<tr>
			<th> Editură </th>
			<td> <%= f.input :id_editura, :label => false, :input_html => {:class => 'form-control'},  collection: @publishers, label_method: :nume, value_method: :id %> </td>
		</tr>
		<tr>
			<th> Domeniu </th>
			<td> <%= f.input :id_domeniu, :label => false, :input_html => {:class => 'form-control'}, collection: @domains, label_method: :nume, value_method: :id %> </td>
		</tr>
		<tr>
			<th> Descriere </th>
			<td> <%= f.input :descriere, :label => false, :input_html => {:class => 'form-control'} %> </td>
		</tr>
		<tr>
			<th> Imagine copertă </th>
			<td> 
				<%= f.input :imagine_coperta, :class => "filestyle", :label => false %>
			</td>
		</tr>
		<tr>
			<th> </th>
			<td> <%= f.submit "Salvează", :class => "btn btn-primary pull-right" %> </td>
		</tr>
	</table>
<% end %>