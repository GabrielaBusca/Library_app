<div class="page-header" >
	<h3>Împrumuturi active </h3>
</div>

<div class="active-borrows">
	<table class="table table-hover" >
		<thead>
			<tr>
				<th> Carte </th>
				<th> Biblioteca </th>
				<th> Data imprumut </th>
				<th> Data inapoiere </th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
		<% @books.each do |book| %>
		  <tr>
			<td> <%= link_to book["carte"], book_path(book["id_carte"]) %> </td>
			<td> <%= book["biblioteca"] %> </td>
			<td> <%= book["data_imprumut"].strftime("%d-%m-%Y") %> </td>
			<td> <%= book["data_inapoiere"].strftime("%d-%m-%Y") %> </td>
			<td> <% if user_extension(book["id"]).length == 0 then %> 
					<%= link_to "Prelungeste termenul" , '/borrows/'+ book["id"].to_s + '/extensions', :method => :post, :class => "btn btn-xs btn-primary" %> 
				<% end %> </td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>

<div class="page-header" >
	<h3>Rezervări active </h3>
</div>

<div class="active-borrows">
	<table class="table table-hover" >
		<thead>
			<tr>
				<th> Carte </th>
				<th> Biblioteca </th>
				<th> Data rezervare </th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
		<% @reserved_books.each do |book| %>
		  <tr>
			<td> <%= link_to book["carte"], book_path(book["id_carte"]) %> </td>
			<td> <%= book["biblioteca"] %> </td>
			<td> <%= book["data_rezervare"].strftime("%d-%m-%Y") %> </td>
			<td> <%= link_to "Anuleaza" , reservation_path(book["id"]), 
							:method => :delete, 
							data: { confirm: 'Esti sigur?' },
							:class => "btn btn-xs btn-danger" %> </td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>