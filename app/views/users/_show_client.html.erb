<div class="page-header" >
	<h3>Împrumuturi active </h3>
</div>

<div class="active-borrows">
	<table class="table table-hover" >
		<thead>
			<tr>
				<th> Carte </th>
				<th> Biblioteca </th>
				<th> Data imprumut </th>
				<th> Data inapoiere </th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
		<% @books.each do |book| %>
		  <tr>
			<td> <%= link_to book["carte"], book_path(book["id_carte"]) %> </td>
			<td> <%= book["biblioteca"] %> </td>
			<td> <%= book["data_imprumut"].strftime("%d-%m-%Y") %> </td>
			<td> <%= book["data_inapoiere"].strftime("%d-%m-%Y") %> </td>
			<td> <%= link_to "Prelungește termenul", "#" %> </td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>

