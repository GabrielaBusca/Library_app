<div class="page-header">
	<h3>Clienti </h3>
</div>

<div class="users-page">
	<table class="table table-hover">
	<thead>
		<th> Nume </th>
		<th> Email </th>
		<th> Telefon </th>
		<th> Adresa </th>
	</thead>
	<tbody>
	  <% @users.each do |user| %>
		<tr>
			<td> <%= link_to user.name + ' ' + user.surname, user_path(user.id) %> </td>
			<td> <%= user.email %></td>
			<td> <%= user.telephone %> </td>
			<td> <%= user.address %> </td>
		</tr>
	  <% end %>
	</tbody>
</table>
</div>