<div class="page-header" >
<h3> Adauga exemplare </h3>
</div>

<div class="book-content well">
	<div class="media-left">
	      <%= image_tag "/uploads/book/" + @book["imagine_coperta"] if @book["imagine_coperta"].present? %>
	</div>
	<div class="media-body">
		<h4> <b> <%= @book["titlu"] %> </b> </h4>
		<table class="table">
	    	<tr>
	    		<th> Anul apariției: </th> 
	    		<td> <%= @book["data_aparitie"].year %> </td>
		    	<th> Data adăugării: </th> 
		    	<td> <%= @book["data_adaugare"].strftime("%d-%m-%Y") %> </td>
		    </tr>
		    <tr>	
		    	<th> Cod ISBN: </th> 
		    	<td> <%= @book["cod_isbn"] %>  </td>
		    </tr>
	    </table>
	</div>
	
</div>

<h4>Selecteaza biblioteca</h4>
<%= simple_form_for(@instance, :url => book_instances_path(params[:book_id]) ) do |f| %>
	<table class="table ">
		<thead>
			<tr>
				<th> </th>
				<th> Nume biblioteca </th>
				<th> Adresa </th>
			</tr>
		</thead>
		<tbody>
			<% @libraries.each do |library| %>
				<tr>
					<td> <input type="radio" name="instance[id_biblioteca]" value='<%=library["id_biblioteca"]%>'> </td>
					<td> <%= library["nume"] %> </td>
					<td> <%= library["adresa"] %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h4> Numarul de exemplare </h4>
	<%= f.input :nr_exemplare, :input_html => {:class => 'form-control'}, :label => false %><br />
	<div> <%= f.submit "Salveaza", :class => "btn btn-default pull-right" %> </div>
<% end %>