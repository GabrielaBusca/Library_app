<div class="page-header">
  <h3>Inregistrare</h3>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label class="control-label"> Email </label>
    <%= f.input :email, required: true, autofocus: true, :input_html => {:class => 'form-control'}, :label => false %>
    <label class="control-label"> Parola </label>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :input_html => {:class => 'form-control'},:label => false %>
    <label class="control-label"> Confirmare parola </label>
    <%= f.input :password_confirmation, required: true, :input_html => {:class => 'form-control'}, :label => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Inregistrare", :class => "btn btn-primary pull-right" %>
  </div>
<% end %>
<div>
  <%= render "devise/shared/links" %>
</div>