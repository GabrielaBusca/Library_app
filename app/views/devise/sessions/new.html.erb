<div class="page-header">
	<h3>Log in</h3>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <label class="control-label"> Email </label>
    <%= f.input :email, required: false, autofocus: true, :input_html => {:class => 'form-control'},:label => false %>
    <label class="control-label"> ParolÄƒ </label>
    <%= f.input :password, required: false, :input_html => {:class => 'form-control'},:label => false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", :class => "btn btn-primary pull-right"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
