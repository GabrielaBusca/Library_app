<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), :class => "btn btn-default" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Inregistrare", new_registration_path(resource_name), :class => "btn btn-default" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Ti-ai uitat parola?", new_password_path(resource_name), :class => "btn btn-default" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Nu ai primit informatii de confirmare?", new_confirmation_path(resource_name), :class => "btn btn-default" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Nu ai primit informatii de deblocare a contului?", new_unlock_path(resource_name), :class => "btn btn-default" %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-default" %>
  <% end -%>
<% end -%>
