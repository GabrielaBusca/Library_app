<div class="page-header" >
	<h3> Împrumută o carte rezervată </h3>
</div>

<div class="reservation-content">
	<div class="user-details well" >
	<table class="table">
		<tr>
			<th> Nume: </th>
			<td> <%= user.name %> </td> 
			<th> Prenume: </th>
			<td> <%= user.surname %> </td> 
		</tr>
		<tr>
			<th> Email: </th>
			<td> <%= user.email %> </td> 
			<th> Telefon: </th>
			<td> <%= user.telephone %> </td> 
		</tr>
		<tr>
			<th> Adresa: </th>
			<td col-span="3"> <%= user.address %> </td> 
		</tr>
	</table>
	</div>

	<h4> Biblioteca </h4>
	<table class="table">
		<tr>
			<th> Nume </th>
			<td> <%= library["nume"] %> </td>
		</tr>
		<tr> 
			<th> Adresa </th>
			<td> <%= library["adresa"] %> </td>
		</tr>
		<tr> 
			<th> Telefoane </th>
			<td> <%= library["telefoane"] %> </td>
		</tr>
	</table>

	<h4> Carte </h4>
		<div class="media book-content">
		  <div class="media-left">
		    <%= link_to book_path(book["id"]) do %>
		      <%= image_tag "/uploads/book/" + book["imagine_coperta"] if book["imagine_coperta"].present? %>
		    <% end %>
		  </div>
		  <div class="media-body">
		  	<%= link_to book_path(book["id"]) do %>
		    	<h4 class="media-heading"> <%= book["titlu"] %></h4>
		    <% end %>
		    <table class="table">
		    	<tr>
		    		<th> Data aparitie: </th> 
		    		<td> <%= book["data_aparitie"].year %> </td>
			    	<th> Data adaugare: </th> 
			    	<td> <%= book["data_adaugare"].strftime("%d-%m-%Y") %> </td>
			    </tr>
			    <tr>	
			    	<th> Cod ISBN: </th> 
			    	<td> <%= book["cod_isbn"] %>  </td>
			    </tr>
		    </table>
		  </div>
		</div>

	<h4> Finalizare </h4>
	<%= simple_form_for( @borrow, :url => reservation_borrow_path(params[:reservation_id]) ) do |f| %>
		<table class="table">
			<tr>
				<th>Data inapoiere</th>
			</tr>
			<tr> 
				<td><%= f.input :data_inapoiere, :label => false%></td>
			</tr>
		</table>
		<%= f.submit "Adauga imprumut", :class => "btn btn-primary pull-right" %>
	<% end %>
</div>